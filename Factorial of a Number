#include <iostream>
using namespace std;

int fact(int n)
{
  
    if(n==0 || n==1) return 1;
    
    return (n * fact(n-1));
}

int main() {
    int n;
    cin>>n;
    
    if(n<0)
    {
        cout<<"Error"<<endl;
    }
    else{
        cout<<fact(n)<<endl;
    }
    

    return 0;
}
