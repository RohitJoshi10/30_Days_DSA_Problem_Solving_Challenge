Problem Link:- https://leetcode.com/problems/find-the-index-of-the-first-occurrence-in-a-string/

class Solution {
public:
    int strStr(string haystack, string needle) {
        int index; int pos = 0;
        while((index = haystack.find(needle, pos)) != string::npos)
        {
            return index;
        }
        return -1;
    }
};
